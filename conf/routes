# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
POST    /login                                controllers.Application.login()
POST    /signup                               controllers.Application.signup()
POST    /request/send/:senderId/:receiverId   controllers.ConnectionController.sendConnectionRequest(senderId: Long, receiverId: Long)
POST    /request/accept/:id                   controllers.ConnectionController.sendConnectionRequest(id: Long)
GET     /profile                              controllers.HomeController.getProfile(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
